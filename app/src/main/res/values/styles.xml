<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Mysupremo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gradient_start</item>
        <item name="colorPrimaryVariant">@color/gradient_center</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gradient_end</item>
        <item name="colorSecondaryVariant">@color/gradient_end</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowBackground">@drawable/complete_background</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="colorAccent">@color/gradient_end</item>
        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Base.Theme.Mysupremo.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/gradient_end</item>
        <item name="colorPrimaryVariant">@color/gradient_center</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gradient_start</item>
        <item name="colorSecondaryVariant">@color/gradient_start</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:windowBackground">@drawable/complete_background_dark</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
        <item name="colorAccent">@color/gradient_start</item>
        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.Mysupremo" parent="Base.Theme.Mysupremo" />

    <style name="TextAppearance.Supremo.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>